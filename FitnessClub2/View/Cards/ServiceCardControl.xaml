                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номер" Width="auto" x:Name="ContractNumber" Binding="{Binding Path=Number}"/>
