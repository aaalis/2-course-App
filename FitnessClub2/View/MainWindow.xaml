    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" 
              Height="75" 
              Background="#FFFFD600" >
            <Grid>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="10">
                    <materialDesign:Chip Height="40" 
                                         Width="200" 
                                         Content="User Amplua" 
                                         HorizontalAlignment="Right" 
                                         Margin="0,0,20,0"/>

                    <materialDesign:Chip
                        Content="User Name"
                        HorizontalAlignment="Right"
                        Height="40"
                        Width="200"
                        IconBackground="{DynamicResource PrimaryHueDarkBrush}"
                        IconForeground="{DynamicResource PrimaryHueDarkForegroundBrush}" 
                        Margin="0,0,20,0">
                        <materialDesign:Chip.Icon>
                            <materialDesign:PackIcon Kind="AccountCircleOutline" 
                                                     Height="24" 
                                                     Width="24" />
                        </materialDesign:Chip.Icon>
                    </materialDesign:Chip>

                    <Button
                        Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Right"
                        Command="{Binding ExitCommand}">
                        <materialDesign:PackIcon
                            Kind="Close"
                            Height="24"
                            Width="24" />
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" 
                            Margin="10">
                    <TextBlock VerticalAlignment="Center" 
                               FontSize="20" 
                               FontFamily="Corbel" 
                               Margin="40,0,0,0">
                    Fitness club name
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <materialDesign:Card Background="{DynamicResource PrimaryHueDarkBrush}" 
                                 Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}" 
                                 Grid.Column="0" 
                                 UniformCornerRadius="0">
                <StackPanel Orientation="Vertical" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Height="Auto" 
                            Width="Auto">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            Height="Auto"
                            Width="Auto"
                            Command="{Binding TBWorkoutsCommand}"
                            Margin="5">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Height="25" 
                                    Width="170">
                            <materialDesign:PackIcon Kind="Timetable" 
                                                     Height="25" 
                                                     Width="45" 
                                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Рас. занятий" 
                                       FontSize="18" 
                                       HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            Height="Auto" 
                            Width="Auto"
                            Command="{Binding TBWorkshiftsCommand}"
                            Margin="5">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Height="25" 
                                    Width="170">
                            <materialDesign:PackIcon Kind="Worker" 
                                                     Height="25" 
                                                     Width="45" 
                                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Рас. работы" 
                                       FontSize="18" 
                                       HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            Height="Auto" 
                            Width="Auto" 
                            Margin="5"
                            Command="{Binding ClientsCommand}">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Height="25" 
                                    Width="170">
                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                     Height="25" 
                                                     Width="45" 
                                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Клиенты" 
                                       FontSize="18" 
                                       HorizontalAlignment="Right" />
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            Height="Auto" 
                            Width="Auto"
                            Command="{Binding ServicesCommand}"
                            Margin="5">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Height="25" 
                                    Width="170">
                            <materialDesign:PackIcon Kind="Weights" 
                                                     Height="25" 
                                                     Width="45" 
                                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Услуги" 
                                       FontSize="18" 
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            Height="Auto" 
                            Width="Auto"
                            Command="{Binding PassCommand}"
                            Margin="5">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Height="25" 
                                    Width="170">
                            <materialDesign:PackIcon Kind="BookOpenOutline" 
                                                     Height="25" 
                                                     Width="45" 
                                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Абонементы" 
                                       FontSize="18" 
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                            Height="Auto" 
                            Width="Auto"
                            Command="{Binding ContractsCommand}"
                            Margin="5">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Height="25"
                                    Width="170">
                            <materialDesign:PackIcon Kind="ContractOutline" 
                                                     Height="25" 
                                                     Width="45" 
                                                     HorizontalAlignment="Left"/>
                            <TextBlock Text="Договора" 
                                       FontSize="18"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Button>
                    <!--<Button Style="{StaticResource MaterialDesignRaisedButton}" Height="Auto" Width="Auto" Margin="5" Click="PaymentButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="170">
